<div class="min-h-screen flex items-center justify-center p-6">
  <div class="w-full max-w-md space-y-8">
    <!-- Header -->
    <div class="text-center space-y-4">
      <a href="/" class="inline-block group">
        <div class="relative">
          <div class="absolute inset-0 bg-[rgb(255,100,100)] opacity-20 blur-2xl rounded-full group-hover:opacity-30 transition-all"></div>
          <div class="relative p-4 rounded-2xl border border-white/10 backdrop-blur-sm transition-transform group-hover:scale-105 duration-300" style="background: rgba(255,255,255,0.05);">
            <svg class="w-10 h-10" style="color: rgb(255,100,100);" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3"></path>
            </svg>
          </div>
        </div>
      </a>
      <div class="space-y-2">
        <h1 class="text-3xl font-bold tracking-tight">Welcome back</h1>
        <p class="text-gray-400">Sign in to your FestNoz account</p>
      </div>
    </div>

    <!-- Flash Messages -->
    <% if flash[:alert] %>
      <div class="p-4 rounded-lg border border-red-500/50 bg-red-500/10 text-red-200">
        <%= flash[:alert] %>
      </div>
    <% end %>
    <% if flash[:notice] %>
      <div class="p-4 rounded-lg border border-green-500/50 bg-green-500/10 text-green-200">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <!-- Login Form -->
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
      <div class="p-6 rounded-xl border border-white/10 backdrop-blur-sm space-y-5" style="background: rgba(255,255,255,0.05);">
        <!-- Email Field -->
        <div class="space-y-2">
          <%= f.label :email, class: "block text-sm font-medium text-gray-200" %>
          <div class="relative group">
            <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400 group-focus-within:text-[rgb(255,100,100)] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            <%= f.email_field :email, autofocus: true, autocomplete: "email",
                placeholder: "you@example.com",
                class: "w-full h-11 pl-10 pr-4 rounded-lg border border-white/10 bg-white/5 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[rgb(255,100,100)] focus:border-transparent transition-all" %>
          </div>
        </div>

        <!-- Password Field -->
        <div class="space-y-2">
          <%= f.label :password, class: "block text-sm font-medium text-gray-200" %>
          <div class="relative group">
            <svg class="absolute left-3 top-1/2 -translate-y-1/2 w-4 h-4 text-gray-400 group-focus-within:text-[rgb(255,100,100)] transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
            <%= f.password_field :password, autocomplete: "current-password",
                placeholder: "Enter your password",
                class: "w-full h-11 pl-10 pr-4 rounded-lg border border-white/10 bg-white/5 text-white placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-[rgb(255,100,100)] focus:border-transparent transition-all" %>
          </div>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="flex items-center">
            <%= f.check_box :remember_me, class: "w-4 h-4 rounded border-white/10 bg-white/5 text-[rgb(255,100,100)] focus:ring-2 focus:ring-[rgb(255,100,100)]" %>
            <%= f.label :remember_me, class: "ml-2 text-sm text-gray-300" %>
          </div>
        <% end %>
      </div>

      <!-- Submit Button -->
      <%= f.submit "Sign in", class: "w-full h-12 font-semibold rounded-lg shadow-lg transition-all group cursor-pointer border-0" +
          " bg-[rgb(255,100,100)] hover:bg-[rgb(255,120,120)] text-white" %>
    <% end %>

    <!-- Divider -->
    <div class="relative">
      <div class="absolute inset-0 flex items-center">
        <div class="w-full border-t border-white/10"></div>
      </div>
      <div class="relative flex justify-center text-xs uppercase">
        <span class="px-3 text-gray-400" style="background: rgb(10,10,10);">Or continue with</span>
      </div>
    </div>

    <!-- Spotify OAuth Button -->
    <a href="<%= omniauth_authorize_path(resource_name, :spotify) %>"
       class="w-full h-12 flex items-center justify-center font-semibold border-2 border-white/10 rounded-lg hover:bg-white/5 transition-all group no-underline text-white">
      <svg class="w-5 h-5 mr-2" viewBox="0 0 24 24" fill="currentColor">
        <path d="M12 0C5.4 0 0 5.4 0 12s5.4 12 12 12 12-5.4 12-12S18.66 0 12 0zm5.521 17.34c-.24.359-.66.48-1.021.24-2.82-1.74-6.36-2.101-10.561-1.141-.418.122-.779-.179-.899-.539-.12-.421.18-.78.54-.9 4.56-1.021 8.52-.6 11.64 1.32.42.18.479.659.301 1.02zm1.44-3.3c-.301.42-.841.6-1.262.3-3.239-1.98-8.159-2.58-11.939-1.38-.479.12-1.02-.12-1.14-.6-.12-.48.12-1.021.6-1.141C9.6 9.9 15 10.561 18.72 12.84c.361.181.54.78.241 1.2zm.12-3.36C15.24 8.4 8.82 8.16 5.16 9.301c-.6.179-1.2-.181-1.38-.721-.18-.601.18-1.2.72-1.381 4.26-1.26 11.28-1.02 15.721 1.621.539.3.719 1.02.419 1.56-.299.421-1.02.599-1.559.3z"/>
      </svg>
      Continue with Spotify
    </a>

    <!-- Sign Up Link -->
    <div class="p-5 rounded-xl border border-dashed border-white/10 hover:border-[rgb(255,100,100)]/50 hover:bg-white/5 transition-all text-center">
      <p class="text-sm text-gray-400">
        Don't have an account?
        <%= link_to "Create one", new_registration_path(resource_name), class: "ml-1 font-semibold hover:underline inline-flex items-center gap-1 group no-underline" +
            " text-[rgb(255,100,100)]" %>
        <svg class="w-4 h-4 transition-transform group-hover:translate-x-0.5 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </p>
    </div>
  </div>
</div>
